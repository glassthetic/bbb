<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glassthetic.bbb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />
    
    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <!-- Here we can provide 2 activities which have the same voice trigger -->
        <!-- This will produce a limited list of options -->
        <!-- The disambiguation will be driven by the label -->
        <activity
            android:name="com.glassthetic.bbb.MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:enabled="true">
        
        	<intent-filter>
        	    <action
        	        android:name="com.google.android.glass.action.VOICE_TRIGGER" />
        	</intent-filter>
        	<meta-data
        	    android:name="com.google.android.glass.VoiceTrigger"
        	    android:resource="@xml/glass_voice_trigger" />
        </activity>
        
        <activity
            android:name="com.glassthetic.bbb.DisplayShotsActivity" />
        
        <activity
            android:name="com.glassthetic.bbb.DebutsShotsRequestActivity" />
        <activity
            android:name="com.glassthetic.bbb.EveryoneShotsRequestActivity" />
        <activity
            android:name="com.glassthetic.bbb.PopularShotsRequestActivity" />
    </application>

</manifest>
